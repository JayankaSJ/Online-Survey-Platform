<h2>Pending Activation Requests</h2>
<hr>
<hr>
<div ng-repeat="notification in notifications">
    <h4>
     Name : {{notification.firstname}} {{notification.lastname}}
    </h4>
    <br>
    <a>
     Email : {{notification.email}}
    </a>
    <br>
    <h5>
     University ID : {{notification.universityid}}
    </h5>
    <button type="button" style="margin-bottom: 15px" class="btn btn-default" ng-click="ctrl.activateuser(notification._id)">Activate User</button>
    <br>
    <hr>
</div>
